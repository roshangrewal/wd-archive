<%- include("header"); -%>

    <div class="box" id="heading">
      <h1><%= operTitle %></h1>
    </div>

    <div class="box">

      <% newListItems.forEach(element => { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
            <p> <%= element.name %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= operTitle %>"></input>
        </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Operation" autocomplete="off">
        <button type="submit" name="list" value="<%= operTitle %>">+</button>
      </form>
    </div>

<%- include('footer'); -%>
